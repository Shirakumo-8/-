// ==UserScript==
// @name         上下滚动刷时长
// @namespace    http://tampermonkey.net/
// @version      1.0
// @description  Add start and stop buttons to control page scrolling for increasing duration.
// @author       はつづき
// @match        *://*/*
// @grant        none
// ==/UserScript==

(function() {
    // 创建包含按钮的容器元素（长方形方框）
    const box = document.createElement('div');
    box.style.position = 'fixed';
    box.style.top = '50%';  // 改为顶部50%，实现垂直居中
    box.style.left = '50%';  // 改为左侧50%，实现水平居中
    box.style.transform = 'translate(-50%, -50%)';  // 通过偏移自身宽高一半来精准居中
    box.style.width = '200px';
    box.style.height = '50px';
    box.style.backgroundColor = 'gray';
    box.style.display = 'flex';
    box.style.borderRadius = '5px';
    box.style.zIndex = '9999';

    // 创建开始按钮
    const startButton = document.createElement('button');
    startButton.textContent = '开始';
    startButton.style.flex = '1';
    startButton.style.backgroundColor = 'green';
    startButton.style.color = 'white';
    startButton.style.border = 'none';
    startButton.style.borderRadius = '5px';
    startButton.addEventListener('click', function() {
        startScrolling();
    });

    // 创建停止按钮
    const stopButton = document.createElement('button');
    stopButton.textContent = '停止';
    stopButton.style.flex = '1';
    stopButton.style.backgroundColor ='red';
    stopButton.style.color = 'white';
    stopButton.style.border = 'none';
    stopButton.style.borderRadius = '5px';
    stopButton.addEventListener('click', function() {
        stopScrolling();
    });

    // 将按钮添加到容器中
    box.appendChild(startButton);
    box.appendChild(stopButton);

    // 将容器添加到页面主体中
    document.body.appendChild(box);

    let scrollingInterval;

    function startScrolling() {
        scrollingInterval = setInterval(() => {
            window.scrollBy(0, 250);
            setTimeout(() => {
                window.scrollBy(0, -250);
            }, 100);
        }, 1000);
    }

    function stopScrolling() {
        clearInterval(scrollingInterval);
    }
})();
